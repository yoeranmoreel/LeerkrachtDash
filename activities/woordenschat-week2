    <script>
        const correctCode = '84156025';

        function moveNext(input, index) {
            if (input.value.length === 1 && index < 7) {
                document.getElementById('digit' + (index + 1)).focus();
            }
        }

        function checkCode() {
            let enteredCode = '';
            for (let i = 0; i < 8; i++) {
                enteredCode += document.getElementById('digit' + i).value;
            }

            const messageEl = document.getElementById('message');
            const chestEl = document.getElementById('chest');
            const prizeBoxEl = document.getElementById('prizeBox');

            if (enteredCode.length !== 8) {
                messageEl.textContent = '‚ùå Voer alle 8 cijfers in!';
                messageEl.className = 'message error show';
                return;
            }

            if (enteredCode === correctCode) {
                messageEl.textContent = '‚úÖ Code is correct! De kist gaat open...';
                messageEl.className = 'message success show';
                chestEl.classList.add('open');
                setTimeout(() => {
                    chestEl.textContent = 'üéâ';
                    prizeBoxEl.classList.add('show');
                }, 600);
            } else {
                messageEl.textContent = '‚ùå Onjuiste code! Probeer het opnieuw.';
                messageEl.className = 'message error show';
                chestEl.classList.remove('open');
                chestEl.textContent = 'üéÅ';
                prizeBoxEl.classList.remove('show');
            }
        }

        function resetCode() {
            for (let i = 0; i < 8; i++) {
                document.getElementById('digit' + i).value = '';
            }
            document.getElementById('message').className = 'message';
            document.getElementById('chest').className = 'chest';
            document.getElementById('chest').textContent = 'üéÅ';
            document.getElementById('prizeBox').classList.remove('show');
            document.getElementById('digit0').focus();
        }

        // Auto-focus eerste input
        document.getElementById('digit0').focus();
    </script>
